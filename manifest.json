{
    "name": "Teambox Notifier",
    "version": "0.9",
    "description": "Teambox Notifier by Angelo DiNardi",
    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "Teambox Notifier",
        "default_popup": "popup.html"
    },
    "permissions": [
        "http://teambox.com/",
        "https://teambox.com/",
        "http://*/api/1/*",
        "https://*/api/1/*",
        "cookies",
        "notifications"
    ],
    "background_page": "background.html",
    "options_page": "options.html",
    "icons": {
        "48": "icon_48.png",
        "128": "icon_128.png"
    }
}
